# Discord Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_guild_id_optional

# OpenAI Configuration (OPTIONAL - only needed if using OpenAI)
# Leave blank if using Ollama (free local AI)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Bot Configuration
BOT_PREFIX=!
BOT_OWNER_ID=your_discord_user_id_optional

# Security Settings
DEBUG_MODE=False
TEST_MODE=False
LOG_LEVEL=INFO

# User Blacklist (comma-separated Discord user IDs)
# Example: BLACKLIST_IDS=123456789,987654321
BLACKLIST_IDS=

# Message Loading Settings
MESSAGE_FETCH_DELAY=1.0
MESSAGE_FETCH_BATCH_SIZE=100
MESSAGE_FETCH_PROGRESS_INTERVAL=100
MESSAGE_FETCH_MAX_RETRIES=5

# Embedding Configuration
# Options: "sentence-transformers" (free, local) or "openai" (paid, fast)
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_TOKENS=512

# Vector Store Configuration
# Options: "chroma" (free, local) or "pinecone" (paid, cloud)
VECTOR_STORE_PROVIDER=chroma
CHROMA_PERSIST_DIR=data/chroma

# Pinecone Configuration (only if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_optional
PINECONE_ENVIRONMENT=your_pinecone_environment_optional

# Chunking Configuration
CHUNKING_TEMPORAL_WINDOW=300
CHUNKING_CONVERSATION_GAP=1800
CHUNKING_WINDOW_SIZE=10
CHUNKING_OVERLAP=2
CHUNKING_MAX_TOKENS=512
CHUNKING_MIN_CHUNK_SIZE=3

# RAG Configuration
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.7
RAG_RERANK=False
RAG_DEFAULT_STRATEGY=token_aware
RAG_INCLUDE_SOURCES=True
RAG_MAX_CONTEXT_TOKENS=2000

# MVP Chatbot Settings (Phase 2)
MVP_MESSAGE_LIMIT=50
MVP_MAX_CONTEXT_TOKENS=3000
MVP_AI_PROVIDER=openai

# Ollama Configuration (for free local AI)
# Download from https://ollama.com/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
